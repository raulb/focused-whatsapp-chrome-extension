{
  "manifest_version": 3,
  "name": "Focused WhatsApp",
  "version": "1.6",
  "description": "Hide unread counts, remove archived chats, and toggle Focus Mode for WhatsApp Web.",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "128": "icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["content.js"],
      "css": ["focus.css"]
    }
  ]
}
